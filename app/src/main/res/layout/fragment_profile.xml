<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.disconnect.Fragments.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryUltraDark">
    <ImageView
    android:id="@+id/profile_picture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:layout_margin="10dp"
    android:scaleType="centerInside"
        android:layout_weight="0.7"
    android:src="@drawable/default_user_picture"
    android:background="@color/colorPrimaryUltraDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3">
            <!--buttons-->

        <com.fdv.loggedoff.Views.CustomTextView
            app:typeface="Roboto_Medium"
            android:id="@+id/profile_user_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Otro Diego"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>
            <LinearLayout
                android:id="@+id/linear_buttons"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:background="@drawable/sign_button"
                android:gravity="center"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btnNewPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add_a_photo_black"
                    android:tint="@color/mb_white"
                    android:scaleType="centerInside"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/mb_white">

                </View>
                <ImageButton
                    android:id="@+id/btnRemove"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_delete_black"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:tint="@color/mb_white"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
    android:orientation="vertical">
    <!--NAME-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_face_black_24dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:alpha="0.6"/>
        <android.support.design.widget.TextInputLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">
            <AutoCompleteTextView android:id="@+id/name" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_nombre"
                android:inputType="textEmailAddress" android:maxLines="1"
                android:editable="false"
                android:singleLine="true"
                android:layout_marginRight="4dp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <!--EMAIL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/email"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:alpha="0.6"/>
        <android.support.design.widget.TextInputLayout android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8">
            <AutoCompleteTextView android:id="@+id/email" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="@string/prompt_email"
                android:inputType="textEmailAddress" android:maxLines="1"
                android:editable="false"
                android:singleLine="true"
                android:layout_marginRight="4dp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <!--NOTIFICATIONS-->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment_alert_outline"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:alpha="0.6"
            android:contentDescription="@string/notifications"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:textColor="@android:color/tertiary_text_dark"
          android:textSize="18sp"
          android:text="@string/mail_notifications"
          android:layout_marginLeft="4dp"
          />
      <Switch
          android:id="@+id/switch_notification"
          android:layout_marginLeft="20dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent" />
  </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
