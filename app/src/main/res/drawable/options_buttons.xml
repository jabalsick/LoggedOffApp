<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"
        android:drawable="@color/colorPrimary_pressed" />

    <!-- disabled-->
    <item android:state_enabled="false" android:drawable="@color/mb_gray"/>

    <!-- enabled-->
    <item android:state_enabled="true" android:drawable="@color/colorPrimaryDark"/>

    <!-- focused -->
    <item android:state_focused="true" android:drawable="@color/colorPrimaryDark" />

    <!-- default -->
    <item android:drawable="@color/colorPrimaryDark" />
</selector>